<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

<RelativeLayout
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/pollAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/replyTime"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="jar b jbk rjsv jvksjv rksvh kjvkrjv ksrjv jsrv kjv j"
            android:textColor="@color/lightBlack"
            android:textStyle="bold"
            android:fontFamily="@font/avenir"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/replyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginStart="15dp"
            android:text="5 minutes ago"
            android:textColor="@color/gainsboro"
            android:fontFamily="@font/spinnaker"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/reply_in_snap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:drawableEnd="@drawable/reply_in_snap"
            android:drawablePadding="5dp"
            android:text="Reply in"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/gainsboro"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_below="@id/pollAnswer"/>


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/more_choices_result_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:background="@null"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />

</RelativeLayout>

</androidx.cardview.widget.CardView>